/* miniprogram/pages/HelpFeedback/AboutFeedback/AboutFeedback.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.feedback{
  width:90%;
}
.feedback-problem{
  margin-top:10px;
}

.problem-textarea{
  background-color: #fff;
  width: 100%;
  height: 200px;
  margin-top:10px;
  box-shadow:1px 1px 10px 3px rgba(226, 226, 226, 0.6);
  margin-bottom: 20px;
}
textarea{
  width:100%;
  height:170px;
}
.currentWordNumber{
  color: gray;
  position: absolute;
  right: 6%;
  top: 215px;
  height:20px;
}


.feedback-picture{ 
  background-color: #fff;
  width: 100%;
  margin-top:10px;
  box-shadow:1px 1px 10px 3px rgba(226, 226, 226, 0.6);
  display: flex;
  justify-content: center; 
}
.picture-intro{
  width:95%;

}
.picture-head{
  color: gray;
  margin-top:10px;
  display: flex;
  justify-content: space-between;
}
.picture-foot{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.upload-deltel{
  width:20px;
  height:20px;
  margin-bottom:70px;
  margin-left:-10px;
  margin-right:5px;
}
.upload{
  width:80px;
  height:80px;
}

.educt_hasupload_pic{
  margin-top:10px;
}
.educt_upload_add{
  width:76px;
  height:76px;
  margin-top:20px;
  margin-bottom: 20px;
  border:2px dashed #ebebeb;
  background-color:#f6f6f6;
  color:#dbdbdb;
  text-align: center;
  line-height: 76px;
  /* display: flex;
  justify-content: center;
  align-items: center; */
  font-size:30px;
}
.feedback button{
  background-color: #9cbf41;
  color:#fff;
  margin-top:20px;
  margin-bottom: 20px;
}